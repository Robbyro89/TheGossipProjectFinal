<body class="gosho">
	<div class="jumbotron">
		<h1>Modifie ton Gossip</h1>
<br>
		<%= form_for (@gossip) do |f| %>
      <div class="form-group">
			 <label for="content">Content</label>
			 <input type="text_area" class="form-control" id="content">
      </div>

		   <input type="hidden" name="_method" value="patch">
		   <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

		  <%= submit_tag "Modifier", class: "btn btn-outline" %>
		<%end%>
	</div>
</body>

<div class="btn-group">
<%= link_to '<== Retour Aux Gossips', gossips_path, class: "btn btn-primary" %>
<%= link_to '<= Retour', gossip_path, class: "btn btn-primary" %>
</div>
